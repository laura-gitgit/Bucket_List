<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bucket-List!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    </head>
    <body>
    <header>
        <div class="container">
            <img src="{{ asset('images/logo.png') }}" alt="">
            <h2 class="header_title">Bucket-List</h2>
        </div>

        <div class="header_home">
            <a href="{{ path('main_home') }}">HOME</a>
            <a href="{{ path('wish_wishes') }}">All wishes</a>
            <a href="{{ path('main_about') }}">About us</a>
            {% if  app.user%}
                <a href="{{ path('app_logout') }}" title="logout">Logout</a>
                <a href="{{ path('wish_create') }}">Add your idea</a>
                <p>Hello {{ app.user.username }}</p>
            {% else %}
                <a href="{{ path('app_register') }}" title="s'authentifier">Register</a>
                <a href="{{ path('app_login') }}" title="s'authentifier">Login</a>
            {% endif %}

        </div>
    </header>


    <main>
        {% for label, messages in app.flashes%}
            {% for message in messages %}
                <div class="alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor%}
        {% endfor%}
        {% block body %} {% endblock %}
    </main>


    <footer class="footer">
        <div class="container-footer">
            &copy; Bucket-List {{ "now" | date('Y') }}
        </div>
    </footer>
    </body>
</html>
